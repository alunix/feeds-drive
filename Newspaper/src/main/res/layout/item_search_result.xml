<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"> <!--android:background="@drawable/layer_card_background"-->
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="fill_horizontal"
				android:orientation="vertical"
				android:layout_weight="0.8">
			<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/Feed.Title"
					android:paddingBottom="8dp"
					android:text="VnExpress News - The news gateway of Vietnam"
					/>
			<TextView
					android:id="@+id/description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/Feed.Content"
					android:text="VnExpress News is The News Gateways of Vietnam. VnExpress Daily with news and columns on Politics, Society, Business, Education, Travel, Sports ..v.v.."
					/>
			<TextView
					android:id="@+id/source"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/Feed.Content"
					android:paddingTop="4dp"
					android:singleLine="true"
					android:autoLink="web"
					android:text="http://vnexpressnews.net/feed/"
					/>
		</LinearLayout>

		<View style="@style/DividerV" />

		<ImageButton
				android:id="@+id/subscribe"
				style="?android:attr/borderlessButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="right|center"
				android:src="@drawable/add_259b24ff"
				/>

</LinearLayout>