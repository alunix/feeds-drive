<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
	    <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


	<!--
		Divider to use in layout:
		<View style="@style/Divider"/>
	-->
	<style name="DividerH">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>
	<style name="DividerV">
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">?android:attr/listDivider</item>
	</style>

	<!--feed style-->

	<style name="Feed">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/gray_text</item>
	</style>

	<style name="Feed.Title" parent="Feed">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/gray_text</item>
		<item name="android:fontFamily">sans-serif-condensed</item>
	</style>

	<style name="Feed.TitleSmall" parent="Feed">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Feed.Date" parent="Feed">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/gray_text</item>
	</style>

	<style name="Feed.Content" parent="Feed">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/gray_secondary</item>
	</style>


	<!--article style-->

	<style name="Article">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/gray_text</item>
	</style>

	<style name="Article.Title" parent="Article">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/gray_text</item>
		<item name="android:fontFamily">sans-serif-condensed</item>
	</style>

	<style name="Article.Info" parent="Article">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/gray_text</item>
	</style>

	<style name="Article.Info.Gray" parent="Article.Info">
		<item name="android:textColor">@color/gray_secondary</item>
	</style>

	<style name="LabelTop">
		<item name="android:paddingTop">16dp</item>
	</style>

